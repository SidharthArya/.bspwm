#if ! pgrep -f bot.py;then python ~/Private/Projects/Fun/telegram-video-check-bot/bot.py; fi &
#if ! pgrep -f covid.py;then python ~/.config/covid/covid.py; fi &
if ! pgrep -f vacc.py;then python ~/.config/covid/vacc.py; fi &



