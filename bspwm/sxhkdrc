	sh ~/.config/bspwm/scripts/helpers/volume.sh decrease
XF86AudioMute
	pactl list sinks | grep -q Mute:.no && pactl set-sink-mute 0 1 || pactl set-sink-mute 0 0 && echo 1 > /tmp/bspwm_brightness_volume
XF86AudioMute
        pamixer -t
        
XF86AudioMicMute
	pactl set-source-mute 1 toggle
